<UserControl x:Class="GUI.Wallets.WalletBrief"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI.Wallets"
             mc:Ignorable="d" 
             d:FontSize="18">
    <Grid>
        <StackPanel Height="50" Width="370" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
            <TextBlock Name="Name" 
                       VerticalAlignment="Center" 
                       Width="150" Margin="10" 
                       Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
            <TextBlock Name="Balance" 
                       VerticalAlignment="Center" 
                       Width="80" Margin="10" 
                       Text="{Binding Balance, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
            

        </StackPanel>
    </Grid>
</UserControl>
